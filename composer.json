{
  "require": {
    "symfony/console": "^5.1"
  },
  "autoload": {
    "psr-4": {
      "App\\": "lib/php/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^8.0",
    "phpstan/phpstan": "^0.12.32"
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/php"
    }
  },
  "scripts": {
    "phpunit": "vendor/bin/phpunit",
    "phpstan": "phpstan analyse lib/php tests/php --level=max --no-progress -vvv --memory-limit=1024M"
  }
}