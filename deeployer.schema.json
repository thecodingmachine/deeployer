{
  "type": "object",
  "properties": {
    "containers": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^(?![0-9]+$)(?!.*-$)(?!-)[a-zA-Z0-9-]{1,63}$": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "replicas": {
              "type": "integer"
            },
            "image": {
              "type": "string",
              "minLength": 1
            },
            "ports": {
              "type": "array"
            },
            "env": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            },
            "host": {
              "type": "object",
              "properties": {
                "url": {
                  "type": "string",
                  "format": "hostname"
                },
                "containerPort": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 65535
                },
                "https": {
                  "type": "string",
                  "enum": [
                    "enable",
                    "disable",
                    "force"
                  ]
                }
              },
              "additionalProperties": false,
              "required": [
                "url"
              ]
            },
            "volumes": {
              "type": "object",
              "additionalProperties": false,
              "patternProperties": {
                "^(?![0-9]+$)(?!.*-$)(?!-)[a-zA-Z0-9-]{1,63}$": {
                  "type": "object",
                  "properties": {
                    "mountPath": {
                      "type": "string",
                      "minLength": 1
                    },
                    "diskSpace": {
                      "type": "string",
                      "minLength": 1
                    }
                  }
                }
              }
            },
            "quotas": {
              "type": "object",
              "properties": {
                "min": {
                  "type": "object",
                  "properties": {
                    "cpu": {
                      "type": "string",
                      "minLength": 1
                    },
                    "memory": {
                      "type": "string",
                      "minLength": 1
                    }
                  }
                },
                "max": {
                  "type": "object",
                  "properties": {
                    "cpu": {
                      "type": "string",
                      "minLength": 1
                    },
                    "memory": {
                      "type": "string",
                      "minLength": 1
                    }
                  }
                }
              }
            }
          },
          "required": [
            "image"
          ]
        }
      }
    },
    "config": {
      "type": "object",
      "properties": {
        "https": {
          "type": "object",
          "properties": {
            "mail": {
              "type": "string",
              "format": "email"
            }
          },
          "required": [
            "mail"
          ]
        }
      }
    }
  }
}